pipeline {
    agent any
    tools {
        maven "Maven3"
           }

    environment {
        registryName = "myAKSClusterPushpa"
        registryCredentials = "ACR"
        registryUrl = "myaksclusterpushpa.azurecr.io"
        dockerImage = ""
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/pushpa88git/springboot']])
            }
        }
        
        stage ("build Jar") {
            steps {
                sh "mvn clean install"
            }
        }
        
        stage ("Build image") {
            steps {
                script {
                    docker.build registryName
                }
            }
        }
        
        stage ("Push to ACR") {
            steps {
                script {
                  docker.withRegistry( "http://${registryUrl}",registryCredential ) {
                  dockerImage.push()
                }       
            }   
            }
        }
        
        stage ("Deploy to K8S") {
            steps {
                withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'K8S', namespace: '', restrictKubeConfigAccess: false, serverUrl: '') {
                sh "kubectl apply -f eks-deploy-k8s.yaml"
                    
                }
            }
        }
    }
}
